{
  "manifest_version": 3,
  "name": "CustomPlaceDB",
  "version": "2.0",
  "description": "네이버지도, 카카오맵에서 장소를 저장하고 개인 맞춤 데이터베이스를 구축하세요. 모든 데이터는 로컬에 안전하게 저장됩니다.",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "https://map.naver.com/*",
    "https://pcmap.place.naver.com/*",
    "https://map.kakao.com/*",
    "https://place.map.kakao.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://map.naver.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://map.kakao.com/*", "https://place.map.kakao.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "CustomPlaceDB"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "toggle-side-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "사이드 패널 토글"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}